#<
#! mol_flatten
#? Squash molecules flat into the XY plane
#. $Revision: 1.18.2.1.2.1 $
#SF
#>

use strict;
package Silico;

#########################
# Variable declarations #
#########################

my $arg;
my $atom;
my @arguments;
my $starttime = (times)[0];

use vars qw($debug);

###################
# Start of script #
###################

silico_setup();
print_title("flatten", '$Revision: 1.18.2.1.2.1 $');

@arguments = get_arguments2('>=1');

set_default_oappend('flat');

foreach $arg (@arguments) {
	
	my $i;
	my $fh_in;
	my $fh_out;

	silico_msg('c', "File: $arg\n");
	
	while(1) {

		++$i;
		
		my $mol = read_mol_single($fh_in, $arg);

		last if !defined $mol;
		
		foreach $atom (atoms($mol)) {
	
			my $x;
			my $y;
			
			$x = $atom->{Y} - $atom->{X};
			$y = ($atom->{X} - $atom->{Y} - 2* $atom->{Z})/2;

			$atom->{X} = $x;
			$atom->{Y} = $y;
			$atom->{Z} = 0;
		}
		
		$mol->{HAS_BAD_GEOM} = 1;

		write_mol_single($fh_out, $mol, undef, undef, undef, '2D');
	}
}

print_finished_message();
print_timing_message($starttime);

#################
# End of script #
#################






###############
# Subroutines #
###############

sub silico_setup {

        #<
        #? Locate the Silico libraries and read in the parent library, silico.pm
        #; Sets: $Silico::home_dir, $Silico::lib_dir
        #; Requires: nothing
        #; Returns: nothing
        #>

        die "Error: The environment variable SILICO_HOME is not set\n" if !$ENV{SILICO_HOME};

        $Silico::home_dir = $ENV{SILICO_HOME}."/";
        $Silico::lib_dir = $Silico::home_dir."lib/";
        push @INC, substr($Silico::lib_dir, 0, -1);

        require silico;
}
