#<
#! mol_rot
#? rotate a molecule about any vector
#.F
#; -x_<number> }
#; -y_<number> } 	Vector to rotate around (assumed to pass thru origin)
#; -z_<number> }
#; -test 		Testing routine: rotate the first molecule only about the axis by 60 degrees
#; -a_<number> 		Angle to rotate molecule through
#; -random_<number>	Generate this number of randomly rotated molecules
#; -maximise		Approximately maximise the extents of the molecule along the X and Y axes (ie align the major axis along the X axis and the medium axis along the Y axis). 
#.SF
#. $Revision: 1.25.2.1.2.1 $
#>

use strict;
package Silico;

#########################
# Variable declarations #
#########################

my $a;
my $ang;
my $arg;
my @arguments;
my $ens;
my $filenum;
my $i;
my $j;
my $maximise;
my $mol;
my $mols;
my $random;
my $test;
my $x;
my $y;
my $z;

###################
# Start of script #
###################

silico_setup();
print_title("mol_rot", '$Revision: 1.25.2.1.2.1 $');

$random = 	make_flag('random', undef,  'Number of random rotations', 1);
$maximise = 	make_flag('maximise', undef,  'Maximise X and Y extents');
$test = 	make_flag('test', undef,  'Test routine');

if (!($random || $maximise)) {
	$x = 	make_flag('x', 'x',    'X-component of axis (vector) about which to rotate', 1, 0, 1);
	$y = 	make_flag('y', 'y',    'Y-component of axis (vector) about which to rotate', 1, 0, 1);
	$z = 	make_flag('z', 'z',    'Z-component of axis (vector) about which to rotate', 1, 0, 1);
	$ang =  make_flag('a', 'angle','Rotation angle (degrees)', 1, 0, !$test);

	if ($x == 0 && $y == 0 && $z == 0) {
		silico_msg('d', "A zero-length vector was supplied as the axis of rotation!\n",
				"Please provide a vector with length > 0, using -x, -y and/or -z.\n");
	}
}

@arguments = get_arguments2('>=1');

foreach $arg (@arguments) {
	
	$i = 0;
	undef $mols;
	
	silico_msg('c', "File: $arg\n");
	
	$mols = read_mol_any($arg);
	if (!defined $mols->[0]) {
		mol_read_error($arg);
		next;
	}
	
	foreach $mol (@$mols) {
		
		if ($test) {
		
			# Rotate around axes rotated by 60 deg
			for ($j=0; $j<=360; $j=$j+60) {
				molecule_rotate_axis($mol, deg_to_rad($j), $x, $y, $z);
				$ens->[0] = $mol;
				set_default_oappend($j);
				write_mol_any($ens);
			}
			silico_msg('c', "Finished first molecule. Exiting.\n");
			print_finished_message();
			exit;

		} elsif ($random) {

			# Produce chain of molecules rotated by a random amount
			for $j (1..$random) {
				undef $ens;
				undef $filenum;
				$x = rand (1)-0.5;
				$y = rand (1)-0.5;
				$z = rand (1)-0.5;
				$a = rand(1) * deg_to_rad(360); 
				silico_msg('c', "Vector: $x $y $z\n");
				silico_msg('c', "Angle of rotation: $a\n");
				molecule_rotate_axis($mol, $a, $x, $y, $z);
				$filenum = sprintf "%05d", $j;
				$ens->[0] = $mol;
				set_default_oappend($filenum);
				write_mol_any($ens);
			}

		} elsif ($maximise) {
			
			my $maxx = 0;
			my $maxy = 0;
			my @dim;

			@dim = molecule_centre($mol);
			printf "Initial extents %0.2f %0.2f %0.2f\n", $dim[0]-$dim[3], $dim[1]-$dim[4], $dim[2]-$dim[5];

			for (1..3) {
				$a = 0;
				for ($j=0; $j<=360; $j=$j+2) {
					molecule_rot_angle_y($mol, 2);
					@dim = molecule_centre($mol);
					$x = $dim[0]-$dim[3];
					if ($x > $maxx) {
						$a = $j;
						$maxx = $x;
					}
					#print "x $x maxx $maxx\n";
				}

				molecule_rot_angle_y($mol, $a);
			
				$a = 0;
				for ($j=0; $j<=360; $j=$j+2) {
					molecule_rot_angle_z($mol, 2);
					@dim = molecule_centre($mol);
					$x = $dim[0]-$dim[3];
					if ($x > $maxx) {
						$a = $j;
						$maxx = $x;
					}
					#print "x $x maxx $maxx\n";
				}

				molecule_rot_angle_z($mol, $a);

				$maxy = 0;
				$a = 0;
				for ($j=0; $j<=360; $j=$j+2) {
					molecule_rot_angle_x($mol, 2);
					@dim = molecule_centre($mol);
					$y = $dim[1]-$dim[4];
					if ($y > $maxy) {
						$a = $j;
						$maxy = $y;
					}
					#print "y $maxy maxy $maxy\n";
				}

				molecule_rot_angle_x($mol, $a);

				@dim = molecule_centre($mol);
				printf "Extents %0.2f %0.2f %0.2f\n", $dim[0]-$dim[3], $dim[1]-$dim[4], $dim[2]-$dim[5];
			}

		} else {

			# Just rotate molecule about axis
			molecule_rotate_axis($mol, deg_to_rad($ang), $x, $y, $z);
		}
				
		++$i;
	}
	
	set_default_oappend('rot');
	write_mol_any($mols);
}

print_finished_message();

#################
# End of script #
#################






###############
# Subroutines #
###############

sub silico_setup {

        #<
        #? Locate the Silico libraries and read in the parent library, silico.pm
        #; Sets: $Silico::home_dir, $Silico::lib_dir
        #; Requires: nothing
        #; Returns: nothing
        #>

        die "Error: The environment variable SILICO_HOME is not set\n" if !$ENV{SILICO_HOME};

        $Silico::home_dir = $ENV{SILICO_HOME}."/";
        $Silico::lib_dir = $Silico::home_dir."lib/";
        push @INC, substr($Silico::lib_dir, 0, -1);

        require silico;
}
