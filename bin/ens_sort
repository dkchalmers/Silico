#<
#! ens_sort
#? Sort a set of molecules by some property
#; -mw Sort molecules by molecular weight
#; -ha Sort molecules by heavy atoms
#; -s_<field> Sort molecules using SDF data field
#F

#SF
#. $Revision: 1.3.2.1.2.2 $
#. Created: DKC November 1999 and later.
#>

use strict;
package Silico;

#########################
# Variable declarations #
#########################

my $arg;
my @arguments;
my $newmols;
my $starttime = (times)[0];

###################
# Start of script #
###################

silico_setup();
print_title("ens_sort", '$Revision: 1.3.2.1.2.2 $');


my $mw = make_flag('mw', 'sort-mw', "Sort molecules by molecular weight");
my $ha = make_flag('ha', 'sort-ha', "Sort molecules by number of heavy atoms");
my $sdf = make_flag('s', 'sdf-field', "Sort molecules using SDF data field", 1);

@arguments = get_arguments2('>=1');



silico_msg('d', "Specify either a property using -p <val> or -ha or -mw \n") if !$mw && !$ha && !$sdf;

foreach $arg (@arguments) {

	my $mol;
	my $mols;
	my $p;
	
	print "File: $arg\n" if (!get_flag('quiet', 'l'));

	$mols = read_mol_any ($arg);
	if (!defined $mols) {
		file_read_error($arg);
		next;
	}
		

	foreach $mol (@$mols) {
	
	
		if ($mw) {
			$mol->{PROP} = molecule_mw($mol);
			$p = 'mw';
			
			
		} 
		
		if ($ha) {
		
			$mol->{PROP} = mol_count_heavy_atoms($mol);
			$p = 'ha';
			
		}
		
		if ($sdf) {
	
			$mol->{PROP} = $mol->{SDF_DATA}{$sdf} || '';
			$p = "$sdf";
			
		}
	}
	
	if ($mw || $ha) {
		@$newmols = sort {$a->{PROP} <=> $b->{PROP}} @$mols;
	} else {
	
		@$newmols = sort {$a->{PROP} cmp $b->{PROP}} @$mols;
	}
	
	
	set_default_oappend("sort_$p");	
				
	write_mol_any($newmols, undef, undef);
}

print_finished_message();
print_timing_message($starttime);

#################
# End of script #
#################






###############
# Subroutines #
###############

sub silico_setup {

        #<
        #? Locate the Silico libraries and read in the parent library, silico.pm
        #; Sets: $Silico::home_dir, $Silico::lib_dir
        #; Requires: nothing
        #; Returns: nothing
        #>

        die "Error: The environment variable SILICO_HOME is not set\n" if !$ENV{SILICO_HOME};

        $Silico::home_dir = $ENV{SILICO_HOME}."/";
        $Silico::lib_dir = $Silico::home_dir."lib/";
        push @INC, substr($Silico::lib_dir, 0, -1);

        require silico;
}
