#<
#! write_gro
#? Read any silico format and write a xyz file.
#. Use: write_gro <file1> <file2> ...
#F
#; -split	Split multiple molecule file into individual structures
#; -prec	Precise - increase precision of .gro file to 0.001 Angstroms
#; -vprec	Very precise - increase precision of .gro file to 0.0001 Angstroms
#; -zv	        Zero velocities - set all velocities to zero
#SF
#. $Revision: 1.1.2.2.2.5 $
#. Created: DKC November 1999 and later.
#>

use strict;
package Silico;

#########################
# Variable declarations #
#########################

my $fr_in;
my $fr_out;
my $starttime = (times)[0];

use vars qw($debug_rings);

###################
# Start of script #
###################

silico_setup();
print_title("write_gro", '$Revision: 1.1.2.2.2.5 $');

		make_flag('split', 	'split', 	"Split multiple molecule file into individual structures");
		make_flag('prec', 	'precise', 	"Give coordinates to 0.001 Angstroms");
		make_flag('vprec', 	'very-precise', "Give coordinates to 0.0001 Angstroms");
my $zv = 	make_flag('zv',    	'zero-velocities', "Set all velocities to zero");

# Options
my $options = '';


add_option('PRECISE', $options) if (get_sflag('prec'));
remove_option('PRECISE', $options) if (get_sflag('vprec'));
add_option('VERYPRECISE', $options) if (get_sflag('vprec'));
add_option('SPLIT', $options) if (get_sflag('split'));

my @arguments = get_arguments2('>=1');

foreach my $arg (@arguments) {

	silico_msg('c', "File: $arg\n");

	while (1) {
		my $mol = read_mol_single($fr_in, $arg);
		last if !defined $mol;
		if ($fr_in->{ERROR}) {
			silico_msg ('e', "Could not read file $arg. Skipping\n");
			last;
		}
		
		# Zero velocities if requested
		if ($zv) {
			foreach my $atom (atoms($mol)) {
			
				$atom->{VX} = 0;
				$atom->{VY} = 0;
				$atom->{VZ} = 0;
			}
		}
		write_mol_single($fr_out, $mol, undef, 'gro');
	}

	close_molfile($fr_out);

}

print_finished_message();
print_timing_message($starttime);

#################
# End of script #
#################






###############
# Subroutines #
###############

sub silico_setup {

        #<
        #? Locate the Silico libraries and read in the parent library, silico.pm
        #; Sets: $Silico::home_dir, $Silico::lib_dir
        #; Requires: nothing
        #; Returns: nothing
        #>

        die "Error: The environment variable SILICO_HOME is not set\n" if !$ENV{SILICO_HOME};

        $Silico::home_dir = $ENV{SILICO_HOME}."/";
        $Silico::lib_dir = $Silico::home_dir."lib/";
        push @INC, substr($Silico::lib_dir, 0, -1);

        require silico;
}
