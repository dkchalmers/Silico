#<
#! write_mol
#? Read a molecule and write (by default) in the same format.
#F
#; -check Check integrity of molecules
#; -merge Merge all molecules into a single molecule
#SF
#. Created: DKC 2001
#. $Revision: 1.30.2.1.2.4 $
#>

use strict;
package Silico;

#########################
# Variable declarations #
#########################

my $starttime = (times)[0];

###################
# Start of script #
###################

print_title("write_mol", '$Revision: 1.30.2.1.2.4 $');

my $check = make_flag('check', 'check-molecules', "Check integrity of molecules");
my $merge = make_flag('merge', 'merge', "Merge all molecules into a single file");

my @arguments = get_arguments2('>=1');

$Silico::debug = $Silico::debug; # Don't warn me

my $allmols;

foreach my $arg (@arguments) {

	silico_msg('c', "File: $arg\n");
	my $mols = read_mol_any($arg);
	
	if (!defined $mols->[0]) {
		mol_read_error($arg);
		next;
	}

	foreach my $mol (@$mols) {
	
		molecule_check_and_fix_connectivity($mol);
		mol_check($mol) if $check;
	}
	
	ensemble_printout($mols, 'all') if $Silico::debug;
	
	if ($merge) {
		
		foreach my $mol (@$mols) {
		
			push @$allmols, $mol;
		}
		
	} else {
		write_mol_any($mols);
	}
}

write_mol_any($allmols) if $merge;

print_finished_message();
print_timing_message($starttime);

#################
# End of script #
#################






###############
# Subroutines #
###############

BEGIN {

	#<
        #? Locate the Silico libraries and read in the parent library, silico.pm
        #; Sets: $Silico::home_dir, $Silico::lib_dir
        #; Requires: nothing
        #; Returns: nothing
        #>

        die "Error: The environment variable SILICO_HOME is not set\n" if !$ENV{SILICO_HOME};

        $Silico::home_dir = $ENV{SILICO_HOME}."/";
        $Silico::lib_dir = $Silico::home_dir."lib/";
        push @INC, substr($Silico::lib_dir, 0, -1);

        require silico;
}
