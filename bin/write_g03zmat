#<
#! write_g03zmat
#? Read a molecule and turn it into a Z-matrix, with atomic connectivity
#  given in the order in which the atoms appear.
#. Usage: write_g03zmat <file1> <file2> ...
#. Created: Benjamin P. Roberts, October 2008
#. $Revision: 1.1.2.2.2.1 $
#>

use strict;
package Silico;

#########################
# Variable declarations #
#########################

my $arg;
my @arguments;
my $c;
my $filebase;
my $mol;
my $mols;
my $starttime = (times)[0];

###################
# Start of script #
###################

silico_setup();
print_title("write_g03zmat", '$Revision: 1.1.2.2.2.1 $');

require silico_gaussian;

@arguments = get_arguments2('>=1');

foreach $arg (@arguments) {
	
	$filebase = get_filebase($arg);
	$mols = read_mol_any($arg);
	
	write_gaussian_zmatrix($mols);
}

print_finished_message();
print_timing_message($starttime);

#################
# End of script #
#################






###############
# Subroutines #
###############

sub silico_setup {

        #<
        #? Locate the Silico libraries and read in the parent library, silico.pm
        #; Sets: $Silico::home_dir, $Silico::lib_dir
        #; Requires: nothing
        #; Returns: nothing
        #>

        die "Error: The environment variable SILICO_HOME is not set\n" if !$ENV{SILICO_HOME};

        $Silico::home_dir = $ENV{SILICO_HOME}."/";
        $Silico::lib_dir = $Silico::home_dir."lib/";
        push @INC, substr($Silico::lib_dir, 0, -1);

        require silico;
}
