#<
#! write_seq
#? Sequence format test script
#. Silico protein/DNA sequence format routines are under development and incomplete
#F
#; -c,--combine Combine sequences from all files to a single file
#; -n,--number-of-residues Number of residues per line in output
#SF
#. $Revision: 1.30.2.2.2.2 $
#>

use strict;
package Silico;

#########################
# Variable declarations #
#########################

my $allseqs;
my $arg;
my @arguments;
my $combine;
my $numline;
my $oformat;
my $options;
my $starttime = (times)[0];

use vars qw($debug);

###################
# Start of script #
###################

silico_setup();
print_title("write_seq", '$Revision: 1.30.2.2.2.2 $');

require silico_sequence;

$combine = make_flag('c', 'combine', "combine all sequences to a single file");
$numline = make_flag('n', 'residues-per-line', "Number of residues per line", 1, 50);

@arguments = get_arguments2('>=1');

@$allseqs = ();

add_option("NUMLINE=$numline", $options);

foreach $arg (@arguments) {

	my $filebase;
	my $oformat1;
	my $seq;
	my $sequences;
	
	print "File: $arg\n" if (!get_flag('quiet', 'l'));
	
	$filebase = get_filebase($arg);
	$sequences = read_seq_any($arg);

	if (!defined $sequences->[0]) {
		seq_read_error($arg);
		next;
	}
	
	$oformat1 = get_sflag('o') || $sequences->[0]{SOURCE} || 'fasta';
	$oformat = $oformat1 if ($arg eq $arguments[0]);

	foreach $seq (@$sequences) {
		seq_printout($seq) if $Silico::debug;
	}
	
	write_seq_any($sequences, $filebase."_new", $oformat1, $options);

	@$allseqs = (@$allseqs, @$sequences) if $combine;
}

write_seq_any($allseqs, 'all', $oformat, $options) if $combine;

print_finished_message();
print_timing_message($starttime);

#################
# End of script #
#################






###############
# Subroutines #
###############

sub silico_setup {

        #<
        #? Locate the Silico libraries and read in the parent library, silico.pm
        #; Sets: $Silico::home_dir, $Silico::lib_dir
        #; Requires: nothing
        #; Returns: nothing
        #>

        die "Error: The environment variable SILICO_HOME is not set\n" if !$ENV{SILICO_HOME};

        $Silico::home_dir = $ENV{SILICO_HOME}."/";
        $Silico::lib_dir = $Silico::home_dir."lib/";
        push @INC, substr($Silico::lib_dir, 0, -1);

        require silico;
}
